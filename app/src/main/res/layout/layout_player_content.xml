<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <ImageView
        android:id="@+id/img_player_content_avt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_file"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_insert_drive_file_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/edt_player_content_name"
        app:layout_constraintEnd_toEndOf="@+id/img_player_content_avt"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_player_content_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sửa tên cầu thủ"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/img_player_content_avt"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_player_content_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sửa tên Đội bóng"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/edt_player_content_name"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_player_content_club"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="cancel"
        app:layout_constraintEnd_toEndOf="@+id/edt_player_content_club"
        app:layout_constraintTop_toBottomOf="@+id/edt_player_content_club"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>